extends ../layouts/default.pug
block style
  link(rel='stylesheet', href='/home/css/setAccount.css')

block main 
  h1(class="mb-4") Chỉnh sửa thông tin tài khoản
  form(
    action=`/setAccount?_method=PUT`
    method="POST"
    id="form-edit-account"
    )
    div(class="form-group")
      label(for="name") Họ tên
      input(
        type="text"
        class="form-control"
        id="name"
        name="name"
        value=tech.name 
      )
    div(class="form-group")
      label(for="email") email
      input(
        type="text"
        class="form-control"
        id="email"
        name="email"
        value=tech.Account.email
      )
    div(class="form-group")
      label(for="current-password") Mật khẩu hiện tại
      input(
        type="password"
        class="form-control"
        id="current-password"
        name="current-password"
        placeholder="Nhập mật khẩu hiện tại"
      )
    div(class="form-group")
      label(for="new-password") Mật khẩu mới
      input(
        type="password"
        class="form-control"
        id="new-password"
        name="new-password"
        placeholder="Nhập mật khẩu mới"
      )
    div(class="form-group")
      label(for="confirm-password") Xác nhận mật khẩu mới
      input(
        type="password"
        class="form-control"
        id="confirm-password"
        name="confirm-password"
        placeholder="Nhập lại mật khẩu mới"
      )
      span(id="password-error" class="error-message")
    div(class="form-group")
      label(for="address") Địa chỉ
      input(
        type="text"
        class="form-control"
        id="address"
        name="address"
        value=tech.address 
      )
    div(class="form-group")
      label(for="avatar") Avatar 
      input(
        type="file"
        class="form-control"
        id="avatar"
        name="avatar"
        )
    div(class="form-group form-check form-check-inline")
      input(
        class="form-check-input"
        type="radio"
        name="status"
        id="statusActive"
        value="active"
        checked = (tech.Account.status == "Active"? true : false)
      )
      label(for="statusActive" class="form-check-label") hoạt động
    div(class="form-group form-check form-check-inline")
      input(
        class="form-check-input"
        type="radio"
        name="status"
        id="statusInActive"
        value="inactive"
        checked=(tech.Account.status == "Inactive"? true : false)
      )
      label(for="statusActive" class="form-check-label") Dừng hoạt động
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Cập nhật
  script(src="/tech/js/setAccount.js")