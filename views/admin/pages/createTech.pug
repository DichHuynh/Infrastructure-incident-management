extends ../layouts/default.pug
block style 
  link(rel='stylesheet', href='/admin/css/createTech.css')

block main 
  .signup-container
    h2 Tạo tài khoản kỹ thuật viên mới
    form(action=`/admin/home/${userId}/createTech`
      method="post"
      enctype="multipart/form-data"
      id="form-create-tech")
      .form-group
        label(for="name") Họ và tên
        input#fullname(type="text", name="name", placeholder="Nhập họ và tên" required)
      .form-group 
        label(for="numberphone") Số điện thoại 
        input#numberphone(type="text", name="numberphone", placeholder="Nhập số điện thoại" required)
      .form-group
        label(for="email") Email
        input#email(type="email", name="email", placeholder="Nhập email" required)
      .form-group
        label(for="password") Mật khẩu
        input#password(type="password", name="password", placeholder="Nhập mật khẩu" required)
      .form-group
        label(for="confirm-password") Nhập lại mật khẩu
        input#confirm-password(type="password", name="confirm-password", placeholder="Nhập lại mật khẩu" required)
      .form-group
        label(for="expertise") Chuyên môn 
        select(name="expertise" class="form-control")
          option(disable selected) -----------
          option(value="Chuyên viên điện") Chuyên viên điện 
          option(value="Chuyên viên nước") Chuyên viên nước
          option(value="Chuyên viên dân dụng") Chuyên viên dân dụng 
          option(value="Chuyên viên mạng") Chuyên viên mạng
      .form-group
        label(for="avatar") Chọn avatar
        input#avatar(type="file", name="avatar", accept="image/*")
      .form-group
        label(for="address") Địa chỉ
        input#address(type="text", name="address", placeholder="Nhập địa chỉ" required)
      .form-group 
        label(for="employment_date") Ngày ký hợp đồng 
        input#employment_date(type="date", name="employment_date", class="form-control", required)
      button(type="submit") Đăng ký