extends ../layouts/default.pug
block style
  link(rel="stylesheet", href="/home/css/reportIssue.css")

block main
  h1(class="mb-4") Báo cáo sự cố mới 

  form(
    action=`/user/home/${userId}/reportIssue`
    method="post"
    enctype="multipart/form-data"
    id = "form-report-issue"
  )
    .form-group
      label(for="name") Tên sự cố
      input(
        type="text",
        id="name",
        name="name", 
        class="form-control", 
        placeholder="Vd: hỏng đèn, hỏng nắp cống,..."
      )

    .form-group
      label(for="description") Mô tả sự cố 
      textarea(
        id="description",
        name="description", 
        class="form-control", 
        rows="5", 
        placeholder="Vd: Đèn đường bị nhấp nháy ảnh hưởng đến giao thông"
      )

    .form-group
      label(for="location") Vị trí sự cố
      input(
        type="text",
        id="location",
        name="location", 
        class="form-control", 
        placeholder="Vd: Đường Nguyễn Văn Linh, Thanh Khê"
      )

    .form-group
      label(for="image") Tải lên hình ảnh
      input(
        type="file",
        id="image",
        name="image", 
        class="form-control"
      )

    .form-group
      button(
        type="submit",
        class="btn btn-primary"
      ) Báo cáo
